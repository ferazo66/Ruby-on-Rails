
<h1><%= name%> Articulo</h1>
<%= form_for(@article) do|f|%>
    <% @article.errors.full_messages.each do |message|%>
        <div class="be-red white top-space">
          *<%= message%>
        </div>
    <%end%>
    <div class="field">
      <%= f.text_field :title, placeholder:"Titulo",class:"form-control"%>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder:"Escribe aqui tu articulo",style:"height:250px" ,class:"form-control"%>
    </div>
    <div class="field">
      <%=f.submit"Guardar Cambios",class:"btn" %>
    </div>
<%end%>